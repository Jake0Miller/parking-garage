<div class="title">
  <h1>Floor <%= @level %></h1>
</div><br>

<section class="details-card">
  <% @floor.rows.each do |row| %>
    <p>Row <%= row.letter %></p>
    <% row.spots.each do |spot| %>
      <% if spot.vehicle.nil? %>
        ⒳
      <% elsif spot.vehicle.width == 2 %>
        🏍
      <% elsif spot.vehicle.width == 3 %>
        🚗
      <% elsif spot.vehicle.width == 4 %>
        🚌
      <% end %>
    <% end %><br><br>
  <% end %>
</section>

<% if current_user && !admin? %>
  <section class="details-card">
    Select your vehicle to reserve a parking spot:<br>
    <a href="/floors/<%= @floor.id %>/motorcycles/new">🏍</a><br>
    <a href="/floors/<%= @floor.id %>/cars/new">🚗</a><br>
    <a href="/floors/<%= @floor.id %>/buses/new">🚌</a><br>
  </section>
<% end %>
