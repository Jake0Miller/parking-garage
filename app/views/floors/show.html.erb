<div class="title">
  <h1>Floor <%= @level %></h1>
</div><br>

<section class="details-card">
  <% @floor[0].rows.each do |row| %>
    <% row.spots.each do |spot| %>
      <% if spot.vehicle.nil? %>
        ⒳
      <% elsif spot.vehicle.width == 2 %>
        🏍
      <% elsif spot.vehicle.width == 3 %>
        🚗
      <% elsif spot.vehicle.width == 4 %>
        🚌
      <% end %>
    <% end %><br><br>
  <% end %>
</section>

<% if current_user && !admin? %>
  <section class="details-card">
    Select your vehicle to reserve a parking spot:<br>
    <%= link_to 'Motorcycle', floors_park_motorcycle_path(@floor) %><br>
    <%= link_to 'Car', floors_park_car_path(@floor) %><br>
    <%= link_to 'Bus', floors_park_bus_path(@floor) %>
  </section>
<% end %>
